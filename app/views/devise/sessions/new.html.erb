<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <fieldset><h2 class='form-signin-heading'>Login</h2></fieldset>
  <%= f.input :email,
    input_html: { class: 'form-control', autofocus: true },
    placeholder: 'Email',
    wrapper: false, label: false %>
  <%= f.input :password,
    input_html: { class: 'form-control' },
    placeholder: 'Password',
    wrapper: false, label: false %>
  <%= f.input :remember_me, as: :boolean %>

  <%= f.button :button, 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
  <div class='links'><%= render 'devise/shared/links' %></div>
<% end %>
